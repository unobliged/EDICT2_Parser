<table>
	<tr>
		<th>Kanji</th>
		<th>Kana</th>
		<th>Definitions</th>
		<th>EDICT2 ID</th>
	</tr>

  <% if @word.def_array.length > 1 %>
		<tr>
			<td><%= @word.kanji %></td>
			<td><%= @word.kana %></td>
			<td><%= @word.def_array[0] %>
			<td><%= @word.edict_id %></td>
		</tr>
		<% (1..(@word.def_array.length-1)).each do |x| %>
			<tr>
				<td></td>
				<td></td>
				<td><%= @word.def_array[x] %></td>
				<td></td>
			</tr>			
		<% end %>
	<% else %>
		<tr>
			<td><%= @word.kanji %></td>
			<td><%= @word.kana %></td>
			<td><%= @word.def_array %></td>
			<td><%= @word.edict_id %></td>
		</tr>
	<% end %>

</table>
